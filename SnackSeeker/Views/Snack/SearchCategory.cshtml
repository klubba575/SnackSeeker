
@{
    ViewData["Title"] = "Search";
}
@model Categories
<h1>Seek Your Snacks, Where are you?</h1>

<form  action="../Snack/SearchCategory" method="post">
    <div class="card col-md-6">
        <p> Enter Your Location and Preferred Price Point Please!</p>
        <input type="text" name="tag" value="" placeholder="Location" required />
        <div>
            <label>$ - Cheapest</label>
            <input type="checkbox" name="Price1" value="1" />
            <label>$$</label>
            <input type="checkbox" name="Price2" value="2" />
            <label>$$$</label>
            <input type="checkbox" name="Price3" value="3" />
            <label>$$$$ - Most Expensive</label>
            <input type="checkbox" name="Price4" value="4" />
        </div>
        <br />
        <div>
            <p>Your average price preference is: @ViewBag.Average.ToString("0.#")</p>
            <label>Randomize Preference Search</label>
            <input type="checkbox" name="random" value="Random" />
        </div>
        <br />
        <div>
            <label>Sort by Restaurant Name A-z</label>
            <input type="radio" name="sortBy" value="Name" />
            <label>Z-a</label>
            <input type="radio" name="sortBy" value="NameReverse" />
        </div>
        <br />
        <div>
        <label>Sort by Price $-$$$$</label>
        <input type="radio" name="sortBy" value="Price" />
        <label>$$$$-$</label>
        <input type="radio" name="sortBy" value="PriceReverse" />
        </div>
        <br />
        <div>
        <label>Sort by Rating Low-High</label>
        <input type="radio" name="sortBy" value="Rating" />
        <label>High-Low</label>
        <input type="radio" name="sortBy" value="RatingReverse" />
        </div>
        <input type="submit" value="Search!" />
    </div>
</form>
